<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001030">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/background_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bgimage3" />

            <TextView
                android:id="@+id/text_welcome_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="HELLO"
                android:textColor="#ffffff"
                android:textSize="96sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_description_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_welcome_city"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="520dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="APPLICATION FUNCTIONALITY"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:gravity="center" />


            <TextView
                android:id="@+id/text_description_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_description_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-180dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="SCROLL DOWN TO SEE THE FUNCTIONALITY"
                android:textColor="#50FFFFFF"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/text_description_down1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_description_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/raleway_extrabold"
                android:gravity="center"
                android:layout_marginStart="26dp"
                android:text="✓ See detailed information about the weather in your city for the next 24 hours"
                android:textColor="#50FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_description_down2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_description_down1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:layout_marginStart="26dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="✕ View the weather forecast for the coming days, such as a weekly forecast"
                android:textColor="#50FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_description_down3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_description_down2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:layout_marginStart="26dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="✕ Easily add and switch between different cities to check their weather"
                android:textColor="#50FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_welcome_city_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="260dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="CHOOSE YOUR CITY"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_text_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_welcome_city_1"
                android:layout_centerInParent="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:hint="ex. Ulyanovsk"
                android:imeOptions="actionDone"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_text_city"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="SAVE"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>